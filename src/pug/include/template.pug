//- template.pug(jade)
- var lang = 'en'
- var ie_classes = false
- var ie = false
- var twitter = false
- var facebook = false
- var dns_prefetch = true
- var favicon = true
- var ie_css_min = false
- var google_fonts = false
- var css_min = false
- var js_min = false
- var cdn = false
- var schema_org = false
- var browser_upgrade = false
- var svg_inline = true
- var pixlayout = false
- var google_analytics = false
doctype html
if ie_classes && facebook
  <!--[if lt IE 7 ]><html lang="#{lang}" prefix="og: http://ogp.me/ns#" class="ie ie6 lt-ie7 lt-ie8 lt-ie9 no-js"><![endif]-->
  <!--[if IE 7 ]><html lang="#{lang}" prefix="og: http://ogp.me/ns#" class="ie ie7 lt-ie8 lt-ie9 no-js"><![endif]-->
  <!--[if IE 8 ]><html lang="#{lang}" prefix="og: http://ogp.me/ns#" class="ie ie8 lt-ie9 no-js"><![endif]-->
  <!--[if IE 9 ]><html lang="#{lang}" prefix="og: http://ogp.me/ns#" class="ie ie9 lt-ie10 no-js"><![endif]-->
  <!--[if (gte IE 10)|!(IE)]<!--><html lang="#{lang}" prefix="og: http://ogp.me/ns#" class="no-js"><!--<![endif]-->
else if ie_classes && !facebook
  <!--[if lt IE 7 ]><html lang="#{lang}" class="ie ie6 lt-ie7 lt-ie8 lt-ie9 no-js"><![endif]-->
  <!--[if IE 7 ]><html lang="#{lang}" class="ie ie7 lt-ie8 lt-ie9 no-js"><![endif]-->
  <!--[if IE 8 ]><html lang="#{lang}" class="ie ie8 lt-ie9 no-js"><![endif]-->
  <!--[if IE 9 ]><html lang="#{lang}" class="ie ie9 lt-ie10 no-js"><![endif]-->
  <!--[if (gte IE 10)|!(IE)]<!--><html lang="#{lang}" class="no-js"><!--<![endif]-->
else if !ie_classes && facebook
  <html lang="#{lang}" prefix="og: http://ogp.me/ns#" class="no-js">
else
  <html lang="#{lang}" class="no-js">
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, height=device-height, minimum-scale=1.0, initial-scale=1.0, maximum-scale=2.0, user-scalable=yes, shrink-to-fit=no')
  title
    block title
      | Template
  meta(name='description', content='')
  meta(name='robots', content='index, follow')
  meta(name='HandheldFriendly', content='true')
  meta(name='MobileOptimized', content='320')
  meta(name='format-detection', content='date=no, address=no, email=no, telephone=no')
  meta(name='x-rim-auto-match', content='none')
  if dns_prefetch
    if google_fonts
      link(rel='dns-prefetch', href='//fonts.googleapis.com')
      link(rel='dns-prefetch', href='//fonts.gstatic.com')
    if cdn
      link(rel='dns-prefetch', href='//oss.maxcdn.com')
      link(rel='dns-prefetch', href='//cdnjs.cloudflare.com')
      link(rel='dns-prefetch', href='//code.jquery.com')
    if google_analytics
      link(rel='dns-prefetch', href='//www.google-analytics.com')
  if favicon
    include ../modules/favicon
  //- Place favicon.ico in the root directory
  link(href='favicon.ico', rel='shortcut icon')
  if twitter
    include ../modules/meta-twitter
  if facebook
    include ../modules/meta-facebook
  if ie
    //- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading
    <!--[if IEMobile]>
    meta(http-equiv='cleartype', content='on')
    <![endif]-->
  if google_fonts
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700&amp;subset=cyrillic', rel='stylesheet')
  if !css_min
    link(href='css/main.css', rel='stylesheet', media='all')
  else
    link(href='css/main.min.css', rel='stylesheet', media='all')
  if ie
    include ../modules/ie-css
    include ../modules/ie-script
body(itemscope=!!schema_org, itemtype=schema_org ? 'http://schema.org/WebPage' : false)
  if browser_upgrade
    include ../modules/browser-upgrade
  block content
  if svg_inline
    include ../modules/svg-inline
  //- Scripts queries
  if cdn
    script(src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js', async=false, defer=false)
    script(src='//code.jquery.com/jquery-1.12.4.min.js', async=false, defer=false)
    //-script(src='//code.jquery.com/jquery-2.2.4.min.js', async=false, defer=false)
    //-script(src='//code.jquery.com/jquery-3.2.1.min.js', async=false, defer=false)
    //-script(src='//code.jquery.com/jquery-migrate-1.4.1.min.js', async=false, defer=false)
    //-script(src='//code.jquery.com/jquery-migrate-3.0.0.min.js', async=false, defer=false)
    script.
      window.Modernizr || document.write('<script src="js/libs/modernizr.min.js"><\/script>');
      window.jQuery || document.write('<script src="js/libs/jquery.min.js"><\/script>');
  else
    script(src='js/libs/modernizr.min.js', async=false, defer=false)
    script(src='js/libs/jquery.min.js', async=false, defer=false)
  block script
  //- Custom scripts
  if !js_min
    script(src='js/common.js', async=false, defer=false)
  else
    script(src='js/common.min.js', async=false, defer=false)
  if pixlayout
    include ../modules/pixlayout
  if google_analytics
    include ../modules/google-analytics
</html>
